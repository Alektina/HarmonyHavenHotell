


@model HarmonyHaven.Models.Cart
<head>
    <link rel="stylesheet" href="/css/product.css" />

</head>


    <div class="sectionmini_product">

    </div>
    <div class="container shop-cart">
        <h1 class="h1-shop">SHOPPING CART</h1>

        @if (Model.CartItems.Count() != 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CartItem Item in Model.CartItems)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => Item.Product.ProductName)</td>
                            <td>@Html.DisplayFor(modelItem => Item.Quantity)</td>
                            <td>@Html.DisplayFor(modelItem => Item.Product.ProductPrice)</td>
                            <td>@Html.DisplayFor(modelItem => Item.CartItemTotal)</td>
                            <td>
                                <a class="btn btn-sm btn-success" asp-controller="Carts" asp-action="RemoveOneItem" asp-route-id="@Item.ProductId">-</a>
                                <a class="btn btn-sm btn-success" asp-controller="Carts" asp-action="AddOneItem" asp-route-id="@Item.ProductId">+</a>
                                <a class="btn btn-sm btn-danger" asp-controller="Carts" asp-action="RemoveAllOfTheseItems" asp-route-id="@Item.ProductId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
            <div class="checkout">


                <span>Total: $</span>@Html.DisplayFor(model => model.CartTotal)
                <br />
                <a asp-controller="Checkouts" asp-action="Details" class="btn btn-sm btn-success">Order checkout</a>
                <br />
                <a asp-controller="Carts" asp-action="EmptyCart">
                    <button type="button" class="btn btn-sm btn-danger mt-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                        </svg>
                        Empty cart
                    </button>
                </a>
            </div>
                }
                else
                {
                <h3 class="text-warning">Your cart is empty</h3>
                }
           
    </div>