
@model HarmonyHaven.Models.Checkout

<head>
    <link rel="stylesheet" href="/css/product.css" />
    <style>
        /* Styling för formuläret */
        .h1-check {
            margin: 120px 0 50px 210px;
        }

        .container {
            display: grid;
            grid-template-columns: 70% 30%; 
            gap: 20px;
        }

        .check {
            width: 700px;
            
            padding: 30px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 100px;
        }

        .row {
            display: flex;
            margin-bottom: 15px;
        }

            .row label {
                width: 150px;
                text-align: left;
                margin-right: 10px;
            }

            .row input, .row select {
                flex: 1;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .row:last-child {
                margin-bottom: 0;
            }

        input[type="submit"] {
            width: 100%;
            color: #FFF;
            border: 1px solid #818B6E;
            background: #818B6E;
            padding: 10px 0;
           
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                color: #FFF;
                border: 1px solid #666;
                background: #666;
            }
        

        .karta {
            padding-top: 30px;
        }
    </style>
</head>

<div class="sectionmini_product"></div>

<h1 class="h1-check">CHECKOUT</h1>

<div class="container">


    <div class="check">
        <form asp-action="Details" method="POST">
            <div class="row">
                <label for="fullname">Full Name:</label>
                <input type="text" id="fullname" name="Fullname" required>
            </div>
            <div class="row">
                <label for="email">Email:</label>
                <input type="email" id="email" name="Email" required>
            </div>
            <div class="row">
                <label for="phonenumber">Phone Number:</label>
                <input type="numbers" id="phonenumber" name="PhoneNumber" required>
            </div>
            <div class="row">
                <label for="cardnumber">Card Number:</label>
                <input type="text" id="cardnumber" name="CardNumber" required>
            </div>
            <div class="row">
                <label for="expdate">Expiration Date:</label>
                <input type="text" id="expdate" name="CardExpiryDate" placeholder="MM/YY" required>
            </div>
            <div class="row">
                <label for="cvv">CVV:</label>
                <input type="text" id="cvv" name="CVC" required>
            </div>
            <div class="row">
                <label for="CardHoldersName">Card Holders Name:</label>
                <input type="text" id="CardHoldersName" name="CardHoldersName" required>
            </div>
            <div class="row">
                <label for="billingaddress">Billing Address:</label>
                <input type="text" id="billingaddress" name="Address" required>
            </div>
            <div class="row">
                <label for="city">City:</label>
                <input type="text" id="city" name="City" required>
            </div>
            <div class="row">
                <label for="zipcode">Zip Code:</label>
                <input type="text" id="zipcode" name="ZipCode" required>
            </div>
            <div class="row">
                <label for="country">Country:</label>
                <select id="country" name="Country" required>
                    <option value="Sweden">Sweden</option>
                    <option value="Norway">Norway</option>
                    <option value="Denmark">Denmark</option>
                    <option value="Finland">Finland</option>
                </select>
            </div>
            <div class="row">
                <input type="submit" value="Submit Payment">
            </div>
        </form>
    </div>
    <div class="contact-info">
        <h2>CONTACT DETAILS</h2>

        <p>ADDRESS: Street Address, City, Zip Code</p>
        <p>TELEPHONE: 123-456-789</p>
        <div class="map">
            <h2>GETTING HERE IS EASY</h2>
            <p>
                Taxi to the hotel. Please let us know if you’d prefer us to meet you in one of the hotel’s limousines.
            </p>
            <div class="karta">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.203222222222!2d-73.98542168459526!3d40.74881787932648!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c259c02ce5a3c9%3A0xf8df0bd57c9d7f58!2sEmpire%20State%20Building!5e0!3m2!1sen!2sus!4v1631160930631!5m2!1sen!2sus" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>

            </div>
        </div>
    </div>
</div>