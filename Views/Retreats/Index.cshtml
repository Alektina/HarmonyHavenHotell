    <script>(function() {
var $slide_news = document.querySelectorAll('.slide_new');
var $controls = document.querySelectorAll('.slide_newr__control');
var $linesikderfull_new = document.querySelectorAll('.linesikderfull_new');
var numOfslide_news = $slide_news.length;
var slidingAT = 1300;
var slidingBlocked = false;

[].slice.call($slide_news).forEach(function($el, index) {
var i = index + 1;
$el.classList.add('slide_new-' + i);
$el.dataset.slide_new = i;
});

[].slice.call($controls).forEach(function($el) {
$el.addEventListener('click', controlClickHandler);
});

function controlClickHandler() {
if (slidingBlocked) return;
slidingBlocked = true;
var $control = this;
var isRight = $control.classList.contains('m--right');
var $curactive_new = document.querySelector('.slide_new.s-new--active_new');
var index = +$curactive_new.dataset.slide_new;
(isRight) ? index++ : index--;
if (index < 1) index = numOfslide_news;
if (index > numOfslide_news) index = 1;
var $newactive_new = document.querySelector('.slide_new-' + index);
$control.classList.add('a--rotation');
$curactive_new.classList.remove('s-new--active_new', 's-new--active_new-prev');
document.querySelector('.slide_new.s-new--prev').classList.remove('s-new--prev');
$newactive_new.classList.add('s-new--active_new');
if (!isRight) $newactive_new.classList.add('s-new--active_new-prev');
var prevIndex = index - 1;
if (prevIndex < 1) prevIndex = numOfslide_news;
document.querySelector('.slide_new-' + prevIndex).classList.add('s-new--prev');

// Update linesikderfull_new width based on current slide
var linesikderfull_new = 67 + 67 * (index - 1);
$linesikderfull_new.forEach(function($el) {
$el.style.width = linesikderfull_new + 'px';
});

setTimeout(function() {
$control.classList.remove('a--rotation');
slidingBlocked = false;
}, slidingAT*0.75);
};
}());</script>
   
